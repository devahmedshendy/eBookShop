<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="category"
            type="learn.shendy.e_bookshop.db.categories.Category" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:letterSpacing="0.15"
            android:text="@{category.name}"
            android:textAllCaps="true"
            android:textColor="@color/fontPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/left_guideline"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/action_and_adventure" />

        <TextView
            android:id="@+id/recent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent"
            android:textAllCaps="true"
            android:textColor="@color/fontPrimary"
            android:textSize="8sp"
            app:layout_constraintStart_toEndOf="@+id/title"
            app:layout_constraintTop_toTopOf="@+id/title" />

        <ImageView
            android:id="@+id/arrow_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:srcCompat="@drawable/ic_arrow_forward" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/title_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="title,recent_text,arrow_iv"
            tools:layout_editor_absoluteY="68dp" />

        <ImageView
            android:id="@+id/empty_category_wrapper"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/bookWrapper"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/right_guideline"
            app:layout_constraintStart_toStartOf="@+id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/title_barrier" />

        <TextView
            android:id="@+id/empty_category_message"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="@string/empty_category_message"
            android:textAllCaps="true"
            android:textColor="@color/bgGradientEndColor"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/empty_category_wrapper"
            app:layout_constraintEnd_toEndOf="@+id/empty_category_wrapper"
            app:layout_constraintStart_toStartOf="@+id/empty_category_wrapper"
            app:layout_constraintTop_toTopOf="@+id/empty_category_wrapper" />

        <ImageButton
            android:id="@+id/left_book_wrapper_iv"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/bookWrapper"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/center_guideline"
            app:layout_constraintStart_toStartOf="@+id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/title_barrier" />

        <ImageView
            android:id="@+id/left_book_cover_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/left_book_wrapper_iv"
            app:layout_constraintEnd_toEndOf="@+id/left_book_wrapper_iv"
            app:layout_constraintStart_toEndOf="@+id/left_book_wrapper_iv"
            app:layout_constraintStart_toStartOf="@+id/left_book_wrapper_iv"
            app:layout_constraintTop_toTopOf="@+id/left_book_wrapper_iv"
            app:srcCompat="@drawable/science_fiction_book1" />

        <ImageButton
            android:id="@+id/right_book_wrapper_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/bookWrapper"
            app:layout_constraintBottom_toBottomOf="@id/left_book_wrapper_iv"
            app:layout_constraintEnd_toStartOf="@+id/right_guideline"
            app:layout_constraintStart_toStartOf="@+id/center_guideline"
            app:layout_constraintTop_toTopOf="@id/left_book_wrapper_iv" />

        <ImageView
            android:id="@+id/right_book_cover_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@id/right_book_wrapper_iv"
            app:layout_constraintEnd_toEndOf="@+id/right_book_wrapper_iv"
            app:layout_constraintStart_toStartOf="@+id/right_book_wrapper_iv"
            app:layout_constraintTop_toTopOf="@+id/right_book_wrapper_iv"
            app:srcCompat="@drawable/science_fiction_book2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/recent_books_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="right_book_cover_iv,right_book_wrapper_iv,left_book_wrapper_iv,left_book_cover_iv"
            tools:layout_editor_absoluteY="20dp" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/empty_category_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="empty_category_wrapper,empty_category_message"
            tools:layout_editor_absoluteY="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>