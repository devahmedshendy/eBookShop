<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/empty_category_wrapper"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/bookWrapper"
            app:layout_constraintBottom_toBottomOf="@+id/empty_category_message"
            app:layout_constraintEnd_toEndOf="@+id/empty_category_message"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/empty_category_message"
            app:layout_constraintTop_toTopOf="@+id/empty_category_message" />

        <TextView
            android:id="@+id/empty_category_message"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:letterSpacing="0.15"
            android:text="@string/empty_category_message"
            android:textAllCaps="true"
            android:textColor="@color/bgGradientEndColor"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/holder_dashboard_category_center_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/holder_dashboard_category_right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/holder_dashboard_category_left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>